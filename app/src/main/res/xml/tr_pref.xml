<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/title_section_unit">

        <ListPreference
            android:dialogTitle="@string/dialog_title_list_preference_unit"
            android:entries="@array/entries_list_preference_unit"
            android:entryValues="@array/entryvalues_list_preference_unit"
            android:key="@string/pref_key_unit"
            android:title="@string/dialog_title_list_preference_unit" />


    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_section_auto_shutdown">

        <ListPreference
            android:dialogTitle="@string/dialog_title_list_preference_auto_shutdown"
            android:entries="@array/entries_list_preference_shutdown"
            android:entryValues="@array/entryvalues_list_preference_shutdown"
            android:key="@string/pref_key_shutdown"
            android:title="@string/dialog_title_list_preference_auto_shutdown" />

    </PreferenceCategory>
    <PreferenceCategory android:title="@string/title_section_weight">

        <EditTextPreference
            android:dialogTitle="@string/title_edittext_preference"
            android:key="@string/pref_key_weight"
            android:summary="@string/title_edittext_preference"
            android:title="@string/title_edittext_preference" />

    </PreferenceCategory>

    <Preference android:title="@string/title_intent_preference">
        <intent
            android:action="android.intent.action.VIEW"
            android:data="http://codepath.com/" />
    </Preference>

</PreferenceScreen>